<div class="row">
  <div class='col-md-9'>
    <br />
    <form class="form-horizontal" role="form">

      {{text-f label="Name" value=name inputSize='col-md-5' errors=errors cssId=idSatName isRequired=true}}

      {{textarea-f label="Description (Optional)" value=description inputSize='col-md-5' cssId=idSatDesc}}

      <div class='pull-right'>
        <br />
        <button {{action 'showModal' 'cancelDeploymentModal'}} class='btn btn-default'>Cancel</button>
        {{#link-to organizationTabRouteName disabled=disableNextOnDeploymentName class='btn btn-primary'}}
            Next
        {{/link-to}}
      </div>

    </form>
  </div>
</div>
{{partial 'cancel-deployment-modal'}}